@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model Racing.UI.Pages.Series.CreateModel
@{
}

<br/><br/><br/>

<p>Enter a Series:</p>

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label class="form-label">
                Name:
            </label>
            <input asp-for="Series.Name" class="form-control"/>
            <span asp-validation-for="Series.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">
                StartDate:
            </label>
            <input asp-for="Series.StartDate" type="date" class="form-control"/>
            <span asp-validation-for="Series.StartDate" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">
                EndDate:
            </label>
            <input asp-for="Series.EndDate" type="date" class="form-control"/>
            <span asp-validation-for="Series.EndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label class="form-label">
                SortingOrder:
            </label>
            <input asp-for="Series.SortingOrder" class="form-control"/>
            <span asp-validation-for="Series.SortingOrder" class="text-danger"></span>
        </div>
    </div>

    <div class="col-auto my-1">
        <input type="submit" class="btn btn-primary"/>
    </div>
</form>