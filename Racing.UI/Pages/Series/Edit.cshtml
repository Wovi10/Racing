@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model Racing.UI.Pages.Series.EditModel
@{
}

<br/><br/><br/>

<p>Enter a Series:</p>

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label class="form-label">
                Name:
            </label>
            <input asp-for="Series.Name" class="form-control" value="@Model.Series.Name"/>
            <span asp-validation-for="Series.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">
                StartDate:
            </label>
            <input asp-for="Series.StartDate" type="date" class="form-control" value="@Model.startdateStr"/>
            <span asp-validation-for="Series.StartDate" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">
                EndDate:
            </label>
            <input asp-for="Series.EndDate" type="date" class="form-control" value="@Model.enddateStr"/>
            <span asp-validation-for="Series.EndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label class="form-label">
                SortingOrder:
            </label>
            <input asp-for="Series.SortingOrder" class="form-control" value="@Model.Series.SortingOrder"/>
            <span asp-validation-for="Series.SortingOrder" class="text-danger"></span>
        </div>
    </div>

    <div class="col-auto my-1">
        <input asp-for="Series.Id" value="@Model.Series.Id" hidden/>
        <input class="btn btn-primary" type="submit" value="Update"/>
    </div>
</form>

<div class="col-md-6 col-lg-3">
    <div class="card my-3 shadow bg-white border-0" style="border-radius: 1rem;">
        <div class="card-body">
            <h3 class="card-title">
                <a class="text-dark" href="javascript:history.go(-1)">Back</a>
            </h3>
        </div>
    </div>
</div>