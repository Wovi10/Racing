@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.Taghelpers
@model Racing.UI.Pages.Pilot.EditModel
@{
}

<br/>
<br/>
<br/>

<form class="w-50 mx-auto" method="post">
    <p>Edit pilot:</p>
    <div class="form-group row">

        <div class="form-group col-md-4">
            <label class="form-label">
                Enter a license number:
            </label>
            <input class="form-control" asp-for="Pilot.LicensNr" value="@Model.Pilot.LicensNr"/>
            <span asp-validation-for="Pilot.LicensNr" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">Name: </label>
            <input class="form-control" asp-for="Pilot.Name" value="@Model.Pilot.Name"/>
            <span asp-validation-for="Pilot.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">Firstname: </label>
            <input class="form-control" asp-for="Pilot.FirstName" value="@Model.Pilot.FirstName"/>
            <span asp-validation-for="Pilot.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="form-group col-md-4">
            <label class="form-label">
                Enter a NickName:
            </label>
            <input class="form-control" asp-for="Pilot.NickName" value="@Model.Pilot.NickName"/>
            <span asp-validation-for="Pilot.NickName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">PhotoPath: </label>
            <input class="form-control" asp-for="Pilot.PhotoPath" value="@Model.Pilot.PhotoPath" type="file"/>
            <span asp-validation-for="Pilot.PhotoPath" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">
                Gender:
            </label>
            <input class="form-control" asp-for="Pilot.Gender" value="@Model.Pilot.Gender"/>
            <span asp-validation-for="Pilot.Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="form-group col-md-4">
            <label class="form-label">
                Enter a Birthdate:
            </label>
            <input class="form-control" asp-for="Pilot.Birthdate" value="@Model.Pilot.Birthdate" type="date"/>
            <span asp-validation-for="Pilot.Birthdate" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">Length: </label>
            <input class="form-control" asp-for="Pilot.Length" value="@Model.Pilot.Length"/>
            <span asp-validation-for="Pilot.Length" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">Weight: </label>
            <input class="form-control" asp-for="Pilot.Weight" value="@Model.Pilot.Weight"/>
            <span asp-validation-for="Pilot.Weight" class="text-danger"></span>
        </div>
    </div>

    <div class="col-auto my-1">
        <input asp-for="Pilot.Id" value="@Model.Pilot.Id" hidden/>
        <input class="btn btn-primary" type="submit" value="Update"/>
    </div>
</form>